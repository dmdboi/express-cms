
<style>
    .bg-black {
        background-color: black;
    }
    pre {
        background-color: darkslategrey;
        padding: 15px;
        color: white
    }
</style>

<div class="container">
    <section class="mt-4">
        <div class="row">
            <div class="col-md-8 mb-4">
                <div class="mb-4 wow fadeIn">
                    <h1 class="my-4">{{post.title}}</h1>
                    <hr>
                    <p class="text-muted"><a href="">{{post.category}}</a> | {{post.created_At}} </p>
                    <hr>
                </div>
                <div class="mb-4 wow fadeIn">
                    <div class="jumbotron p-4 p-md-5 text-white rounded bg-dark" style="
                        background-image: url({{post.image}}); 
                        background-position: center top;
                        background-repeat: no-repeat;
                        background-size: cover;
                        min-height: 400px;">
                    </div>
                    {{{content}}}
                    <hr>
                </div>
            </div>

            <div class="col-md-4 mb-4">

            </div>
        </div>
    </section>
</div>